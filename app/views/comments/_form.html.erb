<%= form_with model: [ @post, comment ] do |f| %>

  <div class="mt-5">
    <% f.label :body %>
    <%= f.text_field :body, placeholder: "コメントする", class: "input input-bordered w-full max-w-xs" %>
  </div>

  <div class="flex justify-end my-4 mr-4">
    <%= f.submit "送信", class: "btn btn-primary" %>
  </div>
<% end %>
