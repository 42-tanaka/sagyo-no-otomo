<div class="card w-full max-w-lg bg-base-100 shadow-xl mt-6 mx-auto">
  <figure class="aspect-w-16 aspect-h-9">
  <%= image_tag post.image.url(:index_size), class: "object-cover" %>
  </figure>
  <div class="card-body ">
    <div class="flex items-center mb-2">
      <%= image_tag current_user.profile.avatar.url, size: '40x40', class: "mr-2" %>
      <%= post.user.profile.name %>
    </div>
    <h2 class="card-title text-lg h-8 mb-2 overflow-hidden"><%= post.title %></h2>
      <% if post.smell || post.sound || post.spill %>
        <div class="badge badge-secondary w-full h-8 flex items-center justify-center">職場だと気になるかも？</div>
      <% else %>
        <div class="badge badge-primary w-full h-8 flex items-center justify-center">職場でも気にならない！</div>
      <% end %>
    <div class="card-actions justify-end mt-4">
      <%= link_to "詳細", post, class:"btn btn-accent" %>
    </div>
  </div>
</div>
