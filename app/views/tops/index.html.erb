<div>
  <h1 class="font-bold text-4xl">作業のオトモ</h1>
<br>
*以下のリンクは仮置き
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
<br>
  <%= link_to "LINEログイン", user_line_omniauth_authorize_path,
  class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium", method: :post %>
<br>
  <%= link_to "ログアウト", destroy_user_session_path,
  class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium", data: { turbo_method: :delete } %>
<br>

<% if user_signed_in? %>
  <%= form_with url: update_notification_settings_path, method: :patch do %>
    <%= hidden_field_tag :line_notifications, !current_user.line_notifications %>
    <%= submit_tag(current_user.line_notifications ? 'LINE通知をオフにする' : 'LINE通知を受け取る', class: 'btn btn-primary') %>
  <% end %>
<% end %>
